<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
      <variable
          name="fragment"
          type="com.jdm.menunenaw.ui.category.StoreSelectFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintBottom_toTopOf="@id/bt_store_select_next" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/bt_store_select_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/select_rect_radius_16_8a96ff"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textOn="@string/next_level"
            android:textOff="@string/need_mininum_select"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>