<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.jdm.menunenaw.ui.location.MapBoundFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_map_bound_map_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintDimensionRatio="1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:ellipsize="end"
            android:text="@{fragment.locationName}"
            app:layout_constraintTop_toBottomOf="@id/ll_map_bound_map_container"
            app:layout_constraintBottom_toTopOf="@id/sb_map_bound_bar"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/sb_map_bound_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:progressDrawable="@drawable/seekbar_background_8a96ff_foreground_5c6295"
            android:thumb="@drawable/oval_fill_5c6295"
            android:splitTrack="false"
            android:max="@{fragment.SEEK_BAR_MAX}"
            app:layout_constraintTop_toBottomOf="@id/ll_map_bound_map_container"
            app:layout_constraintBottom_toTopOf="@id/tb_map_bound_next"
            app:layout_constraintVertical_bias="0.35" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_map_bound_my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_bound_my_location"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/sb_map_bound_bar"
            app:layout_constraintStart_toStartOf="@id/sb_map_bound_bar"
            app:layout_constraintBottom_toTopOf="@id/tb_map_bound_next"
            app:layout_constraintVertical_bias="0.15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_bound_near_location"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="@id/tv_map_bound_my_location"
            app:layout_constraintEnd_toEndOf="@id/sb_map_bound_bar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{fragment.searchResult}"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/sb_map_bound_bar"
            app:layout_constraintEnd_toEndOf="@id/sb_map_bound_bar"
            app:layout_constraintTop_toBottomOf="@id/tv_map_bound_my_location"
            app:layout_constraintBottom_toTopOf="@id/tb_map_bound_next"
            app:layout_constraintVertical_bias="0.35" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/tb_map_bound_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/select_rect_radius_16_8a96ff"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textOn="@string/next_level"
            android:textOff="@string/need_mininum_select"
            android:onClick="@{()->fragment.onClickOfNext()}"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
